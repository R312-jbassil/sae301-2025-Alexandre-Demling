---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = "TaVue — Configurateur de lunettes", active = "" } = Astro.props;
---
<!doctype html>
<html lang="fr" data-theme="tavue">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="TaVue : créez vos lunettes sur mesure. Fabrication française, style raffiné et minimaliste." />
    <meta name="theme-color" content="#111827" />
  </head>
  <body class="min-h-screen bg-base-200 text-base-content">
    <Header active={active} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>