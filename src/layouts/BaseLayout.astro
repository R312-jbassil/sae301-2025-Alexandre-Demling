---

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = "TaVue — Configurateur de lunettes", active = "" } = Astro.props;
---
<!doctype html>
<html lang="fr" data-theme="tavue">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- SEO basique -->
    <meta name="description" content="TaVue : créez vos lunettes sur mesure. Fabrication française, style raffiné et minimaliste." />
    <meta name="theme-color" content="#111827" />
    <link rel="icon" href="/favicon.ico" />

    <!-- Open Graph -->
    <meta property="og:title" content="TaVue — Configurateur de lunettes" />
    <meta property="og:description" content="Personnalisez matériaux, couleurs et dimensions en temps réel." />
    <meta property="og:type" content="website" />
  </head>
  <body class="min-h-screen bg-base-200 text-base-content">
    <!-- Header avec onglet actif -->
    <Header client:load active={active} />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
