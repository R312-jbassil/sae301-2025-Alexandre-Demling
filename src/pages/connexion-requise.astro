---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderDeco from "../components/HeaderDeco.astro";
import Footer from "../components/Footer.astro";
---

<html lang="fr" data-theme="tavue">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Connexion requise — TaVue</title>
  </head>
  <body class="min-h-screen bg-base-200 text-base-content flex flex-col">
    <HeaderDeco active="" />

    <main class="flex-1 flex flex-col items-center justify-center text-center px-6 py-20">
      <h1 class="text-3xl font-bold mb-3">Connectez-vous pour accéder à cette page</h1>
      <p class="opacity-70 mb-8 max-w-md">
        Vous devez être connecté à votre compte TaVue pour utiliser le configurateur ou voir vos créations.
      </p>
      <a href="/" class="btn btn-neutral">Se connecter</a>
    </main>

    <Footer />
  </body>
</html>
